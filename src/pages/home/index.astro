---
import Hero  from './components/hero/index.astro';
import TrustedCarousel from './components/trusted/index.astro';
import Example from './components/example/index.astro'
import Quotes from './components/quotes/index.astro'
import Testomatio from './components/testomatio/index.astro'
import Community from './components/community/index.astro'
import Ai from './components/ai/index.astro'
---

<Hero />

<Ai />

<Example />

<Quotes />

<Community />

<Testomatio />

<TrustedCarousel />

<script>
    document.addEventListener('astro:before-swap', e=>{
        const classList = document.querySelector("div.page > header")!.classList;
        const isHome = e.to.pathname === "/";
        classList.toggle("home-header header", isHome);
        classList.toggle("header", !isHome);
    })
</script>