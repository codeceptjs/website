<style lang="scss">
    .link-button {
        font-size: var(--sl-text-base);
        padding: 1.2rem 4.25rem;
        background: var(--sl-color-text-accent);
        border-color: var(--sl-color-text-accent);
        color: var(--sl-color-black) !important;
        align-items: center;
        border-radius: 999rem;
        display: inline-flex;
        gap: .5em;
        line-height: 1.1875;
        outline-offset: .25rem;
        text-decoration: none;
        margin-top: 2rem;
        margin-bottom: 1rem;
        svg {
            fill: #ffffff !important;
            position: relative !important;
            left: auto !important;
            bottom: auto !important;
            opacity: 1 !important;
            right: -5px;
            transition: right ease .3s;
        }
        &:hover {
            svg {
                right: -10px;
            }
        }
    }

    .hero {
        position: relative;
        padding-top: 8rem;
        padding-bottom: 10rem;
        text-align: center;
        overflow-y: hidden;

        h1 {
            font-size: 4rem;
            font-weight: 400;
            line-height: 1.32;
            letter-spacing: -2px;
        }

        span {
            font-weight: 600;
        }

        svg {
            position: absolute;
            left: 0;
            bottom: -10rem;
            opacity: .5;
            z-index: 1;
            margin-top: 0 !important;
        }

    }

    .container {
        max-width: 67.5rem;
        margin-left: auto;
        margin-right: auto;
        z-index: 2;
        position: relative;
    }

    .frameworks {
        background-color: #bb7fdb;
        padding: 5rem 0 5rem;
    }

    .trust {
        padding: 5rem 0 4rem;
        .container {
            max-width: 100%;
            padding: 0 2rem;
        }
    }

    section {
        margin-top: 0 !important;
        background-color: #ffffff;
    }

    .features {
        padding: 1rem 0 5rem;
        position: relative;
    }

    .demos {
        padding: 5rem 0 4rem;
        background-color: #f6f7f9;
    }
    .example {
        padding: 5rem 0 4rem;
    }
    .quotes {
        padding: 2rem 0 5rem;
        position: relative;
        &:before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            background: linear-gradient(0deg, #5267ee 100%, #ffffff 0%);
            filter: blur(30px);
            opacity: 0.1;
            z-index: -1;
        }
    }

    .testomatio {
        text-align: center;
        padding: 4rem 0 4rem;
    }
</style>