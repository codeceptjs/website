---
import {Image} from 'astro:assets';
import runUiImg from "./images/_runui.gif"
import TrustedCarousel from './components/trusted/index.astro';
import Features from './components/features/index.astro'
import Demos from './components/demos/index.astro'
import Example from './components/example/index.astro'
import Quotes from './components/quotes/index.astro'
import Testomatio from './components/testomatio/index.astro'
---

<section class="hero">
    <h1>
        <span>CodeceptJS</span> ‚Äê supercharged <br>
        <span>End 2 End</span> Testing
    </h1>
    <a class="link-button" href="/quickstart">Quickstart</a>

    <div class="hero-link">
        First <a href="/ai">AI-powered</a> testing framework ü™Ñ
    </div>

    <div class="hero-image">
        <Image src={runUiImg} alt="Run UI"/>
    </div>
</section>

<section class="trust">
    <div class="container">
        <div class="text">
            Trusted By Enterprises
        </div>
        <TrustedCarousel/>
    </div>
</section>

<section class="features">
    <div class="container">
        <Features/>
    </div>
</section>

<section class="demos">
    <div class="container">
        <Demos/>
    </div>
</section>

<section class="example">
    <div class="container">
        <Example/>
    </div>
</section>

<section class="quotes">
    <div class="container">
        <Quotes/>
    </div>
</section>

<section class="testomatio">
    <div class="container">
        <Testomatio/>
    </div>
</section>

<style lang="scss">
    section {
        line-height: normal;
    }
    .link-button {
        font-size: var(--sl-text-base);
        padding: 1.2rem 4.25rem;
        background: var(--sl-color-text-accent);
        border-color: var(--sl-color-text-accent);
        color: var(--sl-color-black) !important;
        align-items: center;
        border-radius: 999rem;
        display: inline-flex;
        gap: .5em;
        line-height: 1.1875;
        outline-offset: .25rem;
        text-decoration: none;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .hero {
        position: relative;
        padding-top: 7rem;
        padding-bottom: 6rem;
        text-align: center;

        &:before {
            background-image: linear-gradient(#8065d569, #ffe68057);
            content: '';
            position: absolute;
            inset: 0;
            z-index: -10;
            border-radius: 30px;
        }

        h1 {
            font-size: 56px;
            font-weight: 600;
            line-height: 1.12;
            letter-spacing: -2px;
            text-align: center;
        }

        span {
            display: inline-block;
        }

        img {
            width: 100%;
            max-width: 600px;
            border: 1px solid #e2e2e2;
            border-bottom: 0;
        }

        .hero-image {
            position: relative;
            margin: 5rem auto -6rem !important;
            padding: 2.5rem 1.5rem 0 1.5rem;
            background-color: var(--sl-color-bg-nav);
            border-radius: 20px 20px 0 0;
            border-bottom: 0;
            max-width: 600px;
            box-sizing: content-box;

            &:before {
                position: absolute;
                content: '';
                width: 0.7rem;
                height: 0.7rem;
                background-color: var(--sl-color-text-accent);
                top: 1.1rem;
                left: calc(50% - 0.35rem);
                border-radius: 100%;
            }
        }
    }

    .container {
        max-width: 67.5rem;
        margin-left: auto;
        margin-right: auto;
    }

    .trust {
        padding: 3rem 0;

        .container {
            display: flex;
            align-items: center;
        }

        .text {
            font-size: 1.6rem;
            font-weight: bold;
            width: 180px;
            margin-right: 70px;
        }
    }

    section {
        margin-top: 0 !important;
    }

    .features {
        padding-top: 120px !important;
        padding-bottom: 80px;
        position: relative;

        &:before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            background: linear-gradient(0deg, #5267ee 100%, #ffffff 0%);
            filter: blur(30px);
            opacity: 0.1;
            z-index: -1;
        }
    }

    .demos {
        padding: 80px 0 40px;
    }
    .example {
        padding: 40px 0 40px;
    }
    .quotes {
        padding: 40px 0 40px;
        position: relative;
        &:before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            background: linear-gradient(0deg, #5267ee 100%, #ffffff 0%);
            filter: blur(30px);
            opacity: 0.1;
            z-index: -1;
        }
    }

    .testomatio {
        text-align: center;
        padding: 80px 0 40px;
    }
</style>