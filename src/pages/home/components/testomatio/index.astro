                <div class="flex flex-col sm:flex-row gap-4">
                    <a
                        href="https://testomat.io"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="no-underline inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
