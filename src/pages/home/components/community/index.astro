          rel="noopener noreferrer"
          class="no-underline group bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-soft hover:shadow-soft-hover card-hover border border-gray-100 dark:border-gray-700 transition-all duration-300"
      >
