---
import { Image } from "astro:assets";
import BC_LogoScreen_C from "./images/_BC_LogoScreen_C.jpg";
import doxyme from "./images/_doxyme.png";
import gen3 from "./images/_gen3.png";
import isotipo from "./images/_isotipo.png";
import kiabi from "./images/_kiabi.png";
import mynd from "./images/_mynd.png";
import zenitech from "./images/_zenitech.png";

import "swiper/css";
import "swiper/css/pagination";
---

<section id="trusted" class="!mt-0 py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-purple-50/30 via-yellow-50/20 to-purple-50/30"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
              <span class="bg-gradient-to-r from-purple-600 to-yellow-600 bg-clip-text text-transparent">
                Trusted by Industry Leaders
              </span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Join thousands of companies worldwide who trust CodeceptJS for their critical testing needs
      </p>
    </div>

    {/* Logo Slider */}
    <div class="swiper swiper-trusted">
      <div class="swiper-wrapper">
        {
          [BC_LogoScreen_C, doxyme, gen3, isotipo, kiabi, mynd, zenitech].map((data) =>
              <div class="swiper-slide group flex flex-col items-center justify-center bg-white/80 backdrop-blur-sm border border-gray-200/50 rounded-2xl p-6 hover:border-purple-300/50 transition-all duration-300">
                <Image class="text-4xl mb-2 group-hover:scale-110 transition-transform duration-300" src={data} alt="" />
              </div>
          )
        }
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<style lang="scss">
  #trusted {
    background: linear-gradient(135deg, #fefce8 0%, #ffffff 50%, #faf5ff 100%);
  }

  .swiper {
    margin-top: 0 !important;

    img {
      width: auto;
      max-width: 180px;
      max-height: 100px;
      filter: grayscale(.9);
      transition: all .2s ease;

      &:hover {
        filter: grayscale(0);
      }
    }

    .swiper-pagination-bullet-active {
      background: var(--sl-color-text-accent) !important;
    }
  }

  .swiper-wrapper {
    align-items: center;
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 0 !important;
    background-color: #f6f7f9;
    border-radius: 1rem;
    height: 120px;
    padding: 1rem;
  }

  .swiper-pagination {
    position: relative;
    margin-top: 2rem !important;
  }

</style>

<script>
  import Swiper from "swiper";
  import { Pagination, Autoplay } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    const swiper = new Swiper(".swiper-trusted", {
      modules: [Pagination, Autoplay],
      slidesPerView: 5,
      spaceBetween: 30,
      loop: true,
      grabCursor: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true
      },
      autoplay: {
        delay: 10000
      }
    });
  });

</script>
