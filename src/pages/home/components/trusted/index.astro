---
import { Image } from "astro:assets";
import BC_LogoScreen_C from "./images/_BC_LogoScreen_C.jpg";
import doxyme from "./images/_doxyme.png";
import gen3 from "./images/_gen3.png";
import isotipo from "./images/_isotipo.png";
import kiabi from "./images/_kiabi.png";
import mynd from "./images/_mynd.png";
import zenitech from "./images/_zenitech.png";

import "swiper/css";
import "swiper/css/pagination";
---

<section id="trusted" class="!mt-0 py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-purple-50/30 via-pink-50/20 to-blue-50/30"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
              <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                Trusted by Industry Leaders
              </span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Join thousands of companies worldwide who trust CodeceptJS for their critical testing needs
      </p>

      {/* Trust Statistics */}
      <div class="flex flex-wrap justify-center gap-8 mb-12">
        <div
            class="!mt-0 flex items-center space-x-2 bg-green-50 backdrop-blur-sm rounded-full px-6 py-3 border border-green-200">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trending-up w-5 h-5 text-green-600"><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline><polyline points="16 7 22 7 22 13"></polyline></svg>
          <span class="text-green-700 font-semibold">98% Enterprise Adoption</span>
        </div>
        <div
            class="!mt-0 flex items-center space-x-2 bg-yellow-50 backdrop-blur-sm rounded-full px-6 py-3 border border-yellow-200">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-award w-5 h-5 text-yellow-600"><circle cx="12" cy="8" r="6"></circle><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"></path></svg>
          <span class="text-yellow-700 font-semibold">Fortune 500 Approved</span>
        </div>
        <div
            class="!mt-0 flex items-center space-x-2 bg-blue-50 backdrop-blur-sm rounded-full px-6 py-3 border border-blue-200">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield w-5 h-5 text-blue-600"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path></svg>
          <span class="text-blue-700 font-semibold">Enterprise Security</span>
        </div>
      </div>
    </div>

    {/* Logo Slider */}
    <div class="swiper swiper-trusted">
      <div class="swiper-wrapper">
        {
          [BC_LogoScreen_C, doxyme, gen3, isotipo, kiabi, mynd, zenitech].map((data) =>
              <div class="swiper-slide group flex flex-col items-center justify-center bg-white/80 backdrop-blur-sm border border-gray-200/50 rounded-2xl p-6 hover:border-purple-300/50 transition-all duration-300">
                <Image class="text-4xl mb-2 group-hover:scale-110 transition-transform duration-300" src={data} alt="" />
              </div>
          )
        }
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<style lang="scss">
  .swiper {
    margin-top: 0 !important;

    img {
      width: auto;
      max-width: 180px;
      max-height: 100px;
      filter: grayscale(.9);
      transition: all .2s ease;

      &:hover {
        filter: grayscale(0);
      }
    }

    .swiper-pagination-bullet-active {
      background: var(--sl-color-text-accent) !important;
    }
  }

  .swiper-wrapper {
    align-items: center;
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 0 !important;
    background-color: #f6f7f9;
    border-radius: 1rem;
    height: 120px;
    padding: 1rem;
  }

  .swiper-pagination {
    position: relative;
    margin-top: 2rem !important;
  }

</style>

<script>
  import Swiper from "swiper";
  import { Pagination, Autoplay } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    const swiper = new Swiper(".swiper-trusted", {
      modules: [Pagination, Autoplay],
      slidesPerView: 5,
      spaceBetween: 30,
      loop: true,
      grabCursor: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true
      },
      autoplay: {
        delay: 10000
      }
    });
  });

</script>
