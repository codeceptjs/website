<style lang="scss">
    h2 {
        font-weight: 400 !important;
        font-size: 3rem !important;
        margin-bottom: 3rem;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 1.5rem;
        align-items: stretch;
    }

    .card {
        margin-top: 0 !important;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        border: 2px solid rgba(120, 0, 124, .1);
        border-radius: 1rem;
        text-decoration: none;
        transition: background-color ease .3s;
        &:hover {
            background-color: rgba(120, 0, 124, .01);
            .link {
                svg {
                    right: -10px;
                }
            }
        }

        .icon {
            width: 48px;
            height: 48px;
            display: flex;
            border-radius: 999rem;
            align-items: center;
            justify-content: center;
            border: 2px solid rgba(120, 0, 124, .2);
            svg {
                width: 60%;
                stroke: var(--sl-color-text-accent);
            }
        }

        .title {
            font-size: 1.2rem;
            margin-top: 1rem !important;
        }

        .description {
            line-height: normal;
            color: var(--sl-color-white);
            margin-bottom: 1rem;
        }

        .link {
            margin-top: auto;
            display: flex;
            align-items: center;
            color: var(--sl-color-text-accent);

            svg {
                fill: var(--sl-color-text-accent);
                position: relative;
                right: -5px;
                transition: right ease .3s;
            }
        }
    }
</style>