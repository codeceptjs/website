---
const links = [
    {
        link: 'https://codecept.io/',
        data: 'Public API'
    },
    {
        link: 'https://codecept.io/',
        data: 'Changelog'
    },
    {
        link: 'https://codecept.io/',
        data: 'Blog'
    },
    {
        link: 'https://codecept.io/',
        data: 'Schedule a Demo'
    },
    {
        link: 'https://codecept.io/',
        data: 'Sign In'
    },
]

---

{
    links.map((data) =>
    <div class="sl-flex header-links">
        <a href={data.link} aria-label={data.data} target="_blank">{data.data}</a>
    </div>
        )
    }

<style>
    .header-links a {
        color: #23262f;
        font-size: 0.875rem;
        text-decoration: none;
    }

    .header-links a:hover {
        margin-bottom: -2px;
        border-bottom: 2px solid rgb(92, 137, 252);
    }

    html[data-theme=dark] .header-links a {
        color: #edeef3;
    }

    @media screen and (max-width: 768px) {
        html[data-theme=dark] .header-links a {
            margin: -4px 0;
        }
    }
</style>